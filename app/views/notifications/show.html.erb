<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @notification.title %></td>
      <td><%= @notification.desc %></td>
      <% if @notification.notification_type == 1 %>
        <td><a class="btn btn-info" href="/users/<%= @notification.sender_id %>">Show User</a></td>
      <% elsif @notification.notification_type == 3 || @notification.notification_type == 4 %>
        <td><a class="btn btn-info" href="/events/<%= @notification.sender_id %>">Show Event</a></td>
      <% end %>
      <% if @notification.notification_type == 1 || @notification.notification_type == 3 %>
        <td><%= link_to 'Accept', '/notifications/' + @notification.id.to_s + '/' + @notification.notification_type.to_s, class: "btn btn-success" %></td>
      <% end %>
      <td><%= link_to 'Delete', @notification, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
</table>
<%= link_to 'Back', notifications_path %>
