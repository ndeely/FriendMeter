<h1>Users</h1>

<div class="form-wrapper">
  <%= form_tag("/users", method: :get, class: "form") do %>
    <div class="field">
      <%= text_field_tag(:search, params[:search]) %>
    </div>
    <div class="actions">
      <%= submit_tag ("Search") %>
    </div>
  <% end %>
</div>

<% if params[:search] != nil %>
    <p>Your search for "<%= params[:search] %>" yielded <%= @users.count %> user<%= @users.count != 1 ? "s" : "" %>.</p>
<% end %>

<% if @users.count == 0 %>
  <p>There are no users to display.</p>
<% else %>
  <% @users.each do |user| %>
    <%= getUserSm(user.id) %>
  <% end %>
<% end %>

<div class="clear"></div>