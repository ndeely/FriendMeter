<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table class="events">
  <thead>
    <tr>
      <th>Event ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
      <th>Pic</th>
      <th>Event Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= will_paginate @events %>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= event.time.strftime("%I:%M %p") %></td>
          <td><%= image_tag(event.pic) %></td>
          <td><%= link_to 'Creator', '/users/' + event.user_id.to_s %></td>
          <td><%= link_to 'View', event %></td>
          <% if current_user.id == event.user_id %>
              <td><%= link_to 'Edit', edit_event_path(event) %></td>
              <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <%= will_paginate @events %>
  </tbody>
</table>

<br>

