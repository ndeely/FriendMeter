<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Event ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Time</th>
      <th>Pic</th>
      <th>Private</th>
      <th>Editable</th>
      <th>Event Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= will_paginate @events %>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.id %></td>
          <td><%= event.name %></td>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
          <td><%= event.time %></td>
          <td><%= event.pic %></td>
          <td><%= event.private %></td>
          <td><%= event.editable %></td>
          <td><%= link_to 'Creator', '/users/' + event.user_id.to_s %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <%= will_paginate @events %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
