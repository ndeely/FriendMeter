<div class="form-wrapper">
  <%= form_with(model: event, local: true, class: "form") do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>

    <div class="field">
      <%= form.label :date %>
      <div class="selects">
        <%= form.date_select :date, start_year: Date.today.year %>
      </div>
    </div>

    <div class="field">
      <%= form.label :time %>
      <div class="selects">
        <%= form.time_select :time %>
      </div>
    </div>

    <div class="field">
      <%= form.label :"Event Picture" %>
      <br>
      <% if event.avatar.attached? %>
        <img src="<%= url_for(event.avatar) %>">
      <% else %>
        <%= image_tag("eph.png") %>
      <% end %>
      <%= form.file_field :avatar %>
    </div>

    <div class="field">
      <%= form.label :private %>
      <%= form.check_box :private %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
