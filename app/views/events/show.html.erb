<%= include_gon %>
<%= getEventL(@event.id) %>

<!-- show attending users -->
<h2><%= eventEnded(@event.id) ? "Attended" : "Attending" %>: <span class="count"><%= @attending.count %></span></h2>
<% if @attending.count == 0 %>
  <p>There are no confirmed attendees yet.</p>
<% else %>
  <% @attending.each do |a|
    @user = User.find_by(id: a.user_id) %>
    <div class="col-xs-4 col-md-2">
      <div class="user-sm">
        <a href="/users/<%= @user.id.to_s %>">
          <p><%= getName(@cuid, a.user_id) %></p>
          <p><%= getPic(@cuid, a.user_id) %></p>
        </a>
      </div>
    </div>
  <% end %>
<% end %>
<div class="clear"></div>
<%= will_paginate @attending %>
<% if !eventEnded(@event.id) && @isi %>
  <p><a class="btn <%= @isAttending ? "btn-danger" : "btn-success" %>" href="/events/<%= @event.id.to_s %>/<%= @isAttending ? 2 : 1 %>"><%= @isAttending ? "Unattend" : "Attend" %> Event</a></p>
<% end %>

<% if !eventEnded(@event.id) %>

  <!-- show event comments -->
  <h2 id="comments">Comments (<%= @comments.count %>)</h2>
  <% @comments.each do |c| %>
    <div class="comment">
      <div class="col-xs-4 col-md-2">
        <%= getPic(@cuid, c.user_id) %>
      </div>
      <div class="col-xs-6 col-md-8">
        <p class="name <%= getChatColor(c.user_id, @event.user_id) %>"><%= getName(@cuid, c.user_id) %></p>
        <p><%= c.text %></p>
      </div>
      <% if @b1 || c.user_id == @cuid %>
      <div class="col-xs-2 col-md-2">
        <%= link_to 'Delete', c, method: :delete, :role=>"button", :class => "btn btn-danger mb-2", data: { confirm: 'Are you sure?' } %>
      </div>
      <% end %>
    </div>
    <div class="clear"></div>
  <% end %>
  <% if @isi %>
    <%= render 'cform', comment: @comment %>
  <% end %>

<% else %>

  <!-- show event reviews -->
  <h2 id="reviews">Reviews (<%= @reviews.count %>)</h2>
  <% @reviews.each do |r| %>
    <div class="review">
      <div class="col-xs-4 col-md-2">
        <%= getPic(@cuid, r.user_id) %>
      </div>
      <div class="col-xs-6 col-md-8">
        <p class="name <%= getChatColor(r.user_id, @event.user_id) %>"><%= getName(@cuid, r.user_id) %> <%= reviewRating(r.rating) %></p>
        <p><%= r.text %></p>
      </div>
      <% if @b1 || r.user_id == @cuid %>
      <div class="col-xs-2 col-md-2">
        <%= link_to 'Delete', r, method: :delete, :role=>"button", :class => "btn btn-danger mb-2", data: { confirm: 'Are you sure?' } %>
      </div>
      <% end %>
    </div>
    <div class="clear"></div>
  <% end %>
  <% if @isi && isAttending(@event.id, @cuid) && !hasReviewed(@cuid, @event.id) %>
    <%= render 'rform', review: @review %>
  <% end %>
<% end %>