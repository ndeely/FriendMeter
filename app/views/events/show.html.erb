<div class="event">
  <h2><%= @event.name %></h2>

  <div class="col-xs-12 col-md-6">
    <% if @event.avatar.attached? %>
      <image src="<%= url_for(@event.avatar) %>">
    <% end %>
  </div>

  <div class="col-xs-12 col-md-6">
    <p><%= @event.description %></p>
    <p><%= @event.date %> <%= @event.time.strftime("%I:%M %p") %></p>
    <p>Public: <%= !@event.private ? "Yes" : "No" %></p>
    <p>Organised By: <%= link_to @name, '/users/' + @event.user_id.to_s %></p>
  </div>

  <!-- show event buttons -->
  <% if @b2 %>
    <button class="btn1" onclick="window.location.href='<%= edit_event_path(@event) %>'">
        <span class="circle" aria-hidden="true">
        <span class="icon arrow"></span>
        </span>
        <span class="button-text">Edit</span>
    </button>
    <%= link_to 'Delete', @event, method: :delete, :role=>"button", :class => "btn btn-danger mb-2", data: { confirm: 'Are you sure?' } %>
  <% end %>
  <button class="btn1" onclick="window.location.href='javascript: history.go(-1)'">
      <span class="circle" aria-hidden="true">
      <span class="icon arrow left"></span>
      </span>
      <span class="button-text">Back</span>
  </button>
</div>

<!-- show attending users -->
<h2>Attending: <span class="count"><%= @attending.count %></span></h2>
<% if @attending.count == 0 %>
  <p>There are no confirmed attendees yet.</p>
<% else %>
  <% @attending.each do |attender|
    @user = User.find_by(id: attender.user_id)
    @name = getName(current_user.id, attender.user_id) %>
    <div class="user-sm col-xs-4 col-md-2">
      <a href="/users/<%= @user.id.to_s %>">
        <p><%= @name %></p>
        <p>
          <% if showPic(current_user.id, attender.user_id) %>
            <img src="<%= url_for(@user.avatar) %>" />
          <% else %>
            <%= image_tag("ph.png") %>
          <% end %>
        </p>
      </a>
    </div>
  <% end %>
<% end %>
<div class="clear"></div>
<% if !@isAttending %>
  <button class="btn1" onclick="window.location.href='/events/<%= @event.id %>/1'">
      <span class="circle" aria-hidden="true">
      <span class="icon arrow"></span>
      </span>
      <span class="button-text">Attend</span>
  </button>
<% else %> <!--show unattend button -->
  <button class="btn1" onclick="window.location.href='/events/<%= @event.id %>/2'">
    <span class="circle" aria-hidden="true">
    <span class="icon arrow"></span>
    </span>
    <span class="button-text">Unattend</span>
  </button>
<% end %>

<!-- show event comments -->
<h2 id="comments">Comments (<%= @comments.count %>)</h2>
<% @comments.each do |comment|
  @name = getName(current_user.id, comment.user_id) %>
  <div class="comment">
    <div class="col-xs-4 col-md-2">
      <% if showPic(current_user.id, comment.user_id) %>
        <image src="<%= url_for(@creator.avatar) %>">
      <% else %>
        <%= image_tag("ph.png") %>
      <% end %>
    </div>
    <div class="col-xs-6 col-md-8">
      <p class="name <%= getChatColor(current_user.id, comment.user_id, @event.user_id) %>"><%= @name %></p>
      <p><%= comment.text %></p>
    </div>
    <% if @b1 || comment.user_id == current_user.id %>
    <div class="col-xs-2 col-md-2">
      <%= link_to 'Delete', comment, method: :delete, :role=>"button", :class => "btn btn-danger mb-2", data: { confirm: 'Are you sure?' } %>
    </div>
    <% end %>
  </div>
  <div class="clear"></div>
<% end %>
<% if @isi %>
  <%= render 'cform', comment: @comment %>
<% end %>

